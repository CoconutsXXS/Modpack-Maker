{
  "name": "modpack-maker",
  "version": "0.0.3",
  "description": "Lightweight app to create and launch modpack. Easy debuging that let you combine hundred of mods together while keeping the game fluid.",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "build": "electron-builder"
  },
  "author": "Coconuts XXS",
  "license": "MIT",
  "devDependencies": {
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12",
    "java-parser": "^3.0.1"
  },
  "dependencies": {
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@ghostery/adblocker-electron": "^2.5.1",
    "@msgpack/msgpack": "^3.1.2",
    "@nut-tree-fork/nut-js": "^4.2.6",
    "@spyglassmc/mcfunction": "^0.2.7",
    "@xmcl/game-data": "^1.2.6",
    "@xmcl/world": "^1.2.0",
    "buffer-to-data-url": "^1.0.0",
    "chokidar": "^4.0.3",
    "cross-fetch": "^4.1.0",
    "decompress": "^4.2.1",
    "event-stream": "^4.0.1",
    "extract-zip": "^2.0.1",
    "fast-xml-parser": "^5.2.3",
    "gmll": "^4.1.5",
    "grape-electron-dl": "^1.0.1-3.0.0",
    "jszip": "^3.10.1",
    "lodash": "^4.17.21",
    "minecraft-data": "^3.85.0",
    "minecraft-launcher-core": "^3.18.2",
    "node-stream-zip": "^1.15.0",
    "node-window-manager": "^2.2.4",
    "postprocessing": "^6.37.8",
    "prismarine-nbt": "^2.7.0",
    "realism-effects": "^1.1.2",
    "similarity": "^1.2.1",
    "three": "^0.180.0",
    "toml": "^3.0.0",
    "unzipit": "^1.4.3",
    "unzipper": "^0.12.3",
    "v8": "^0.1.0",
    "zlib": "^1.0.5"
  },
  "build": {
    "electronVersion": "38.2.1",
    "appId": "fr.coconuts.modpackmaker",
    "productName": "ModpackMaker",
    "directories": {
        "output": "dist"
    },
    "files": [
        "**/*",
        "!node_modules/.cache"
    ],
    "asar": false,
    "mac": {
        "target": [
          { "target": "dir" },
          { "target": "zip" }
        ],
        "icon": "icon/icon.icns",
        "artifactName": "${productName}-${version}-mac-${arch}.${ext}"
    },
    "win": {
      "target": [
        { "target": "portable" }
      ],
      "icon": "icon/icon.png",
      "artifactName": "${productName}-${version}-win-${arch}.${ext}"
    },
    "linux": {
        "target": ["AppImage"],
        "icon": "icon/icon.png",
        "artifactName": "${productName}-${version}-linux-${arch}.${ext}"
    }
    }
}