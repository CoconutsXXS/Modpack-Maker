{
  "name": "modpack-maker",
  "version": "0.0.3",
  "description": "Lightweight app to create and launch modpack. Easy debuging that let you combine hundred of mods together while keeping the game fluid.",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "build": "electron-builder"
  },
  "author": "Coconuts XXS",
  "license": "MIT",
  "devDependencies": {
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "@electron-forge/plugin-auto-unpack-natives": "^7.9.0",
    "@electron-forge/plugin-fuses": "^7.9.0",
    "@ghostery/adblocker-electron": "^2.12.3",
    "@msgpack/msgpack": "^3.1.2",
    "@nut-tree-fork/nut-js": "^4.2.6",
    "@spyglassmc/mcfunction": "^0.2.38",
    "@xmcl/game-data": "^1.2.6",
    "@xmcl/world": "^1.2.0",
    "buffer-to-data-url": "^1.0.0",
    "chokidar": "^4.0.3",
    "cross-fetch": "^4.1.0",
    "event-stream": "^4.0.1",
    "extract-zip": "^2.0.1",
    "fast-xml-parser": "^5.3.0",
    "grape-electron-dl": "^1.0.1-3.0.0",
    "lodash": "^4.17.21",
    "minecraft-data": "^3.99.1",
    "minecraft-launcher-core": "^3.18.2",
    "node-stream-zip": "^1.15.0",
    "node-window-manager": "^2.2.4",
    "postprocessing": "^6.37.8",
    "prismarine-nbt": "^2.7.0",
    "realism-effects": "^1.1.2",
    "similarity": "^1.2.1",
    "three": "^0.180.0",
    "toml": "^3.0.0",
    "unzipit": "^1.4.3"
  },
  "release:fix-windows-installer": "grep -qxF \"CRCCheck off\" node_modules/app-builder-lib/templates/nsis/common.nsh || echo \"\nCRCCheck off\n\" >> node_modules/app-builder-lib/templates/nsis/common.nsh",
  "build": {
    "electronVersion": "38.2.1",
    "appId": "fr.coconuts.modpackmaker",
    "productName": "ModpackMaker",
    "npmRebuild": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/.cache"
    ],
    "asar": false,
    "mac": {
      "target": [
        {
          "target": "dir"
        },
        {
          "target": "zip"
        }
      ],
      "icon": "icon/icon.icns",
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}",
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "icon/icon.png",
      "artifactName": "${productName}-${version}-win-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": true,
      "killAppProcessesOnUninstall": true,
      "closeAppBeforeInstall": true
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "icon/icon.png",
      "artifactName": "${productName}-${version}-linux-${arch}.${ext}"
    }
  },
  "optionalDependencies": {
    "fsevents": "^2.3.3"
  },
  "asar": true,
  "asarUnpack": [
    "node_modules/**/*",
    "assets/**/*"
  ]
}
